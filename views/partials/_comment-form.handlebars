{{#unless bookmarks}}
    <div class="comment-form">
        <h4>Leave a Comment</h4>
        <form id="comment-{{this._id}}" method="POST" action="/addcomment/{{this._id}}">
            <div class="form-group form-row mb-0 pt-2">
                <label class="col">Subject
                    <input type="text" class="form-control" name="title" class="comment-title" required />
                </label>
                <label class="col">Name
                    <input type="text" class="form-control" name="author" class="comment-author" required />
                </label>
            </div>
            <div class="form-group form-row">
                <label class="col">Description<br>
                    <textarea class="form-control" class="col" name="body" class="comment-body" ></textarea>
                </label>

            </div>
            <div class="form-group form-row">
                <button type="submit">Add Comment</button>
            </div>
        </form>
    </div>
{{/unless}}