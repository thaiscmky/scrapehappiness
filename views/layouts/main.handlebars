<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="description" content="A motivational article scraper">
        <meta name="author" content="Thais Cailet">
        <title>Happy Life Hacks</title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/solid.css" integrity="sha384-Rw5qeepMFvJVEZdSo1nDQD5B6wX0m7c5Z/pLNvjkB14W6Yki1hKbSEQaX9ffUbWe" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/fontawesome.css" integrity="sha384-GVa9GOgVQgOk+TNYXu7S/InPTfSDTtBalSgkgqQ7sCik56N9ztlkoTr2f/T44oKV" crossorigin="anonymous">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <link rel="stylesheet" href="./assets/css/main.css">
    </head>
    <body>
        {{#if error}}
            <div class="alert alert-danger text-center">
                {{error}}
            </div>
        {{/if}}
        {{#if success}}
            <div class="alert alert-success text-center">
                {{success}}
            </div>
        {{/if}}
        <!-- Navigation -->
        {{> _navigation }}
        <!-- Page Content -->
        <main>
            <div class="jumbotron text-shadow">
                <div class="container">
                    <h1 class="display-3 my-4 text-mid">Happy Life Scraper
                        <br><small class="text-small">Lifehack Edition</small>
                    </h1>
                </div>
            </div>
            <div class="container" id="wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <!-- Article Post -->
                        {{{ body }}}
                    </div>
                </div>
            </div>
        </main>
        {{> _footer}}
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
        <script defer src="https://use.fontawesome.com/releases/v5.0.1/js/all.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"
                integrity="sha384-u/bQvRA/1bobcXlcEYpsEdFVK/vJs3+T+nXLsBYJthmdBuavHvAW6UsmqO2Gd/F9"
                crossorigin="anonymous"></script>
        <script src="./assets/js/view.js"></script>
    </body>
</html>
